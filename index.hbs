{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}


{{! The big featured header on the homepage, with the site logo and description }}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}> 
        <div id="top" class="vertical">
        <div id="site-head-content" class="inner">
            {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>

        

        {{! Social Icons}}
        <div class="blog-description social-icons">
            <a href="http://www.facebook.com/mikenieva" target="_blank"><img src="/assets/images/facebook.png"></a>
            <a href="http://www.twitter.com/mikenieva" target="_blank"><img src="/assets/images/twitter.png"></a>            
            <a href="http://www.linkedin.com/in/miguelnieva/es" target="_blank"><img src="/assets/images/linkedin.png"></a>  
            <a href="https://google.com/+miguelnieva" target="_blank"><img src="/assets/images/google-plus.png"></a>	
            <a href="http://github.com/miguelnieva" target="_blank"><img src="/assets/images/github.png"></a>  

        </div> <!-- Social Icons End -->

        <div class="blog-description social-icons social-icons-bottom">
            <a href="http://conexionew.com" target="_blank"><img src="/assets/images/conexionweb.png"></a>
            <a href="http://cursos.mejorando.la" target="_blank"><img src="/assets/images/mejorandola.png"></a>            

        </div> <!-- Social Icons End -->

            <a class='btn first'>#ideas &nbsp; &nbsp;<span><i class="fa fa-caret-down"></i></span></a>
            
        </div>
    </div>

</header>

{{! The main content area on the homepage }}
<main class="content" role="main">

    <div class='fixed-nav'>
    	{{#if @blog.logo}}<a class="blog-logo-left" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>{{/if}}
    {{! Footer Social Menu }}
    
    <h5 style="
    color: white;
    text-align: center;
    font-size: 1.9rem; 
    line-height: 1.5em; 
    font-weight: 400;  letter-spacing: 0;
    font-family: 'Open Sans', sans-serif;
">Miguel Nieva</h5>
<h2 style=" 
    font-size: 1.3rem; 
    line-height: 2.9em; font-weight: 300; font-family: 'Roboto Slab', serif; 
    letter-spacing: 0;
    color: white;
    text-align: center;
">Web Dev / Tech-Entrepreneur</h2>        

<a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/emprendimientos">Emprendimiento</a>
<a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/liderazgo">Liderazgo</a>
<a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/management">Management</a>
<a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/viajes">Viajes</a>

    <div class="footer-social-menu">
    	<div class="footer-social-icons">
    	    <a href="http://www.facebook.com/mike.nieva" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
            <a href="http://www.twitter.com/mikenieva" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
            <a href="https://github.com/miguelnieva" target="_blank"><i class="fa fa-github fa-2x"></i></a>
            <a href="https://plus.google.com/+MiguelNieva" rel=”author” target="_blank"><i class="fa fa-google-plus fa-2x"></i></a>
            <a href="http://instagram.com/mikenieva" rel=”author” target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
    	</div> 
	</div>
    
    </div>

    {{#foreach posts}}
    <div class='post-holder'>
        
            {{#if @first}}
                <article class="{{post_class}} first">
            {{else}}
                {{#if @last}}
                    <article class="{{post_class}} last">
                {{else}}
                    <article class="{{post_class}}">
                {{/if}}
            {{/if}}
        
         <header class="post-header">                
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                <div class="post-meta"><i class="fa fa fa-calendar"></i>&nbsp;&nbsp;&nbsp;<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}} </time>&nbsp;&nbsp;&nbsp; {{#if tags}} <span class="post-tags "> <i class="fa fa-tags"></i> {{tags separator=" | "}} {{/if}}</span> </div>
         </header>

        	<section class="post-excerpt">
            <p>{{excerpt characters="140"}} ... <a href="{{url}}" class="read-more">Leer más...</a></p>
       	 </section>

        </article>
        <div class='post-after'></div>
    </div>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    
    {{pagination}}

</main>