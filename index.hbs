{{!< default}}

{{#contentFor "meta"}}
    <title>Miguel Nieva - Business Developer</title>
    <meta name="description" content="Lo más importante es conectar y atraer personas que estén en sintonía con nuestras filosofías y pensamientos. Emprendedores, profesionales y desarrolladores de negocios." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{@blog.url}}" />
    <meta property="og:title" content="Miguel Nieva - Business Developer" />
    <meta property="og:site_name" content="{{@blog.title}}" />
    {{#if @blog.logo}}<meta property="og:image" content="{{@blog.url}}{{@blog.logo}}" />{{/if}}
    <meta property="og:description" content="Lo más importante es conectar y atraer personas que estén en sintonía con nuestras filosofías y pensamientos. Emprendedores, profesionales y desarrolladores de negocios."/>
    <meta property="fb:profile_id" content="mikenieva" />
    <meta property="fb:admins" content="mikenieva" />
{{/contentFor}}


{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        <div id="top" class="vertical">
        <div id="site-head-content" class="inner">
            {{#if @blog.logo}}<a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>



        {{! Social Icons}}
        <div class="blog-description social-icons">
            <a href="http://facebook.com/miguelnieva.com" target="_blank"><img src="/assets/images/facebook.png"></a>
            <a href="http://twitter.com/mikenieva" target="_blank"><img src="/assets/images/twitter.png"></a>
            <a href="http://linkedin.com/in/miguelnieva/es" target="_blank"><img src="/assets/images/linkedin.png"></a>
            <a href="http://google.com/+miguelnieva?rel=author" target="_blank" rel="author"><img src="/assets/images/google-plus.png"></a>
            <a href="http://github.com/miguelnieva" target="_blank"><img src="/assets/images/github.png"></a>
            <a href="http://instagram.com/mikenieva" target="_blank"><img src="/assets/images/instagram.png"></a>

        </div> <!-- Social Icons End -->

        <div class="blog-description social-icons social-icons-bottom">
            <a href="http://miguelnieva.com/conexionweb/" target="_blank"><img src="/assets/images/conexionweb.png"></a>
            <a href="http://miguelnieva.com/mejorandola" target="_blank"><img src="/assets/images/mejorandola.png"></a>

        </div> <!-- Social Icons End -->

        <div class="categorias">
            <div class="boton-uno botones">
                <a class="btn first" href="{{@blog.url}}/tag/liderar"><span class="glyphicon glyphicon-fire">&nbsp;</span>Liderar</a>
            </div>
            <div class="botones">
                <a class="btn first" href="{{@blog.url}}/tag/administrar"><span class="glyphicon glyphicon-tasks">&nbsp;</span>Administrar</a>
            </div>
            <div class="botones">
                <a class="btn first" href="{{@blog.url}}/tag/negociar"><span class="glyphicon glyphicon-comment">&nbsp;</span>Negociar</a>
            </div>
            <div class="botones">
                <a class="btn first" href="{{@blog.url}}/tag/experiencias"><span class="glyphicon glyphicon-globe">&nbsp;</span>Experiencias</a>
            </div>
            <div class="botones">
                <a class="btn first" href="{{@blog.url}}/tag/libros"><span class="glyphicon glyphicon-book">&nbsp;</span>Libros</a>
            </div>
        </div>
        </div>
    </div>

</header>

{{! The main content area on the homepage }}
<main class="content" role="main">

    <div class='fixed-nav'>
    	{{#if @blog.logo}}<a class="blog-logo-left" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>{{/if}}
    {{! Footer Social Menu }}

    <h5>Miguel Nieva</h5>
    <h2>Business Developers</h2>
    <hr>
     <div class="tags">
        <a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/liderar"><span class="glyphicon glyphicon-fire">&nbsp;&nbsp;</span>Liderar</a>
        <a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/administrar"><span class="glyphicon glyphicon-tasks">&nbsp;&nbsp;</span>Administrar</a>
        <a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/negociar"><span class="glyphicon glyphicon-comment">&nbsp;&nbsp;</span>Negociar</a>
        <a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/experiencias"><span class="glyphicon glyphicon-globe">&nbsp;&nbsp;</span>Experiencias</a>
        <a class="fn-item active" item_index="1" href="{{@blog.url}}/tag/libros"><span class="glyphicon glyphicon-book">&nbsp;&nbsp;</span>Libros</a>
    </div>
    <hr>
    <a class="fn-item active" item_index="1" href="{{@blog.url}}/lectores-elite"><span class="glyphicon glyphicon-envelope">&nbsp;&nbsp;</span>Lectores Élite</a>

    <div class="footer-social-menu">
    	<div class="footer-social-icons">
    	    <a href="http://www.facebook.com/miguelnieva.com" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
                <a href="http://www.twitter.com/mikenieva" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
                <a href="http://github.com/miguelnieva" target="_blank"><i class="fa fa-github fa-2x"></i></a>
                <a href="http://plus.google.com/+MiguelNieva?rel=author" rel=”author” target="_blank"><i class="fa fa-google-plus fa-2x"></i></a>
                <a href="http://instagram.com/mikenieva" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
                <a href="http://mx.linkedin.com/in/miguelnieva/es" target="_blank"><i class="fa fa-linkedin fa-2x"></i></a>
    	</div>
	</div>

    </div>

    {{#foreach posts}}
    <div class='post-holder'>

            {{#if @first}}
                <article class="{{post_class}} first">
            {{else}}
                {{#if @last}}
                    <article class="{{post_class}} last">
                {{else}}
                    <article class="{{post_class}}">
                {{/if}}
            {{/if}}

         <header class="post-header">
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
         </header>

        	<section class="post-excerpt">
            <p>{{excerpt characters="140"}} ... <a href="{{url}}" class="read-more">Leer más...</a></p>
       	 </section>

        </article>
        <div class='post-after'></div>
    </div>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}

    {{pagination}}

</main>
