{{!< default}}


    


{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The main content area on the homepage }}
<main class="content" role="main">

        {{! Navigation for Small Screen }}

        <div class="back-to-home">
            <a href="{{@blog.url}}"><i class="fa fa-long-arrow-left fa-2x"></i><h5>{{@blog.title}}</h5></a>
            
        </div> <!-- Small Screen Navigation End -->

    <div class='post-fixed-nav'>
    	{{#if @blog.logo}}<a class="blog-logo-left" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Logo" /></a>{{/if}}
    <h5>Miguel Nieva</h5>
    <h2>Web Dev / Tech-Entrepreneur</h2>        
    <div class="footer-social-menu">
        <div class="footer-social-icons">
            <a href="http://facebook.com/mike.nieva" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
            <a href="http://twitter.com/mikenieva" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
            <a href="http://github.com/miguelnieva" target="_blank"><i class="fa fa-github fa-2x"></i></a>
            <a href="http://google.com/+miguelnieva" target="_blank"><i class="fa fa-google-plus fa-2x"></i></a>
            <a href="http://instagram.com/mikenieva" rel=”author” target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
            <a href="http://mx.linkedin.com/in/miguelnieva/es" rel=”author” target="_blank"><i class="fa fa-linkedin fa-2x"></i></a>
        </div> 
    </div>
        <hr>
        <div class="post-sidebar">

            {{! Facebook Likebox // Replace with your code }}
            <a class="twitter-timeline" href="https://twitter.com/mikenieva" data-widget-id="450408755503431681"></a>
            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

        </div>
    </div>


    {{! Each post will be output using this markup }}

    <div class='post-holder'>    
            
        {{! Everything inside the #post tags pulls data from the post }}

        <article class="{{post_class}}" style="padding-top: 30px;">  
        {{#post}}

        {{! Información sobre Post para el loop }}

              {{#contentFor "meta"}}
                    <meta property="og:type" content="article" />
                    <meta property="og:url" content="{{url absolute="true"}}" />
                    <meta property="og:title" content="{{title}} - Miguel Nieva" />
                    <meta property="og:site_name" content="{{@blog.title}}" />
                    <meta property="og:description" content="{{excerpt characters="220"}}..."/>
                    <meta property="article:author" content="https://facebook.com/mike.nieva" />
                    <meta property="article:published_time" content="{{date format="YYYY-MM-DD"}}" />{{#foreach tags}}
                    <meta property="article:tag" content="{{name}}" />{{/foreach}}
                    <meta property="fb:profile_id" content="mikenieva" />
                    <meta property="fb:admins" content="mikenieva" />
                {{/contentFor}}

        
         <header>                
                <nav class="navbar navbar-default navegacion" role="navigation" style="
        background: #f2efe8;
        margin: 0 0 60px;
        padding-bottom: 15px;
        border: none;
        border-radius: 0;
        border-bottom: 1px solid #B5B9BA;
">
  <div class="container-fluid" style="padding:0">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1" style="text-align: center; width: auto; background-color: rgb(242, 239, 232); padding: 0px; margin: 0px; height: 1px;">
      <ul class="nav navbar-nav navbar-left" style="
    text-align: center;
    background: #f2efe8;
    width: 100%;
">

  <li style="
    font-size: 16px;
    padding-left: 0;
    margin-left: 0;
"><a href="{{@blog.url}}/tag/liderazgo" style="
    padding-left: 0;
"><span class="glyphicon glyphicon-fire"></span>&nbsp;&nbsp;Liderazgo</a></li>
  <li style="
    font-size: 16px;
    margin: 0;
">
<a href="{{@blog.url}}/tag/management"><span class="glyphicon glyphicon-tasks"></span>&nbsp;&nbsp;Management</a></li>
  <li style="
    font-size: 16px;
    margin: 0;
"><a href="{{@blog.url}}/tag/viajes-y-experiencias"><span class="glyphicon glyphicon-plane"></span>&nbsp;&nbsp;Experiencias</a></li>
<li style="
    font-size: 16px;
    margin: 0;
"><a href="{{@blog.url}}/tag/web"><span class="glyphicon glyphicon-globe"></span>&nbsp;&nbsp;Web</a></li>
  
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

                <h2 class="post-title" style="
    margin-bottom: 10px;
"><a href="{{url}}">{{{title}}}</a></h2>
                <div class="post-meta"><i class="fa fa fa-calendar"></i>  <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}} </time> &nbsp; &nbsp; {{#if tags}} <span class="post-tags "> <i class="fa fa-tags"></i> {{tags separator=" | "}} {{/if}}</span> </div>
         </header>

            <section class="post-content">
                    <div class="block-socialbuttons">

                        <div class="socialbutton facebookbutton">
                            <div class="fb-like" data-href="{{url}}" data-width="100px" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
                        </div>

                        <div class="socialbutton twitterbutton">
                            <a href="https://twitter.com/share" class="twitter-share-button" data-via="mikenieva">Tweet</a>
                                <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
                                </script>
                        </div>

                        <div class="socialbutton">
                            <script src="//platform.linkedin.com/in.js" type="text/javascript">
                                lang: en_US
                            </script>
                            <script type="IN/Share" data-counter="right"></script>
                        </div>

                        <div class="socialbutton">
                            <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
                            <g:plusone></g:plusone>
                        </div>                         


                    </div>
                {{content}}
            </section>


            <footer class="post-footer">


                {{! Discuss Comment Integration}}
                    <section class="post-comment">
                        <div id="disqus_thread"></div>
                        <script type="text/javascript">
                            var disqus_shortname = 'miguelnieva'; // required: replace example with your forum shortname
                            var disqus_identifier = '{{post.id}}'; // make sure to use the post.id as an identifier, otherwise disqus will use the pages url per default, which might be problematic...

                            /* * * DON'T EDIT BELOW THIS LINE * * */
                            (function() {
                                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                            })();
                        </script>
                        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                        <a href="http://disqus.com" class="dsq-brlink">Leave a Reply <span class="logo-disqus"></span></a>
                    </section> <!-- Discuss Comment End -->

            </footer>
            {{/post}}
    
        </article>        
    </div>

</main>